# ~/.config/git/config - Git configuration
# Add your git settings here

[user]
    # Uncomment and set your details:
    # name = Your Name
    # email = your.email@example.com

[init]
    defaultBranch = main

[core]
    editor = nano
    autocrlf = input
    
[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lo = log --oneline
    ll = log --oneline --graph --all
    
[color]
    ui = auto
